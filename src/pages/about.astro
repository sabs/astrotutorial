---
import BaseLayout from "../layouts/BaseLayout.astro";

const identity = {
	firstName: "Sarah",
	country: "Canada",
	occupation: "Technical Writer",
	hobbies: ["photography", "birdwatching", "baseball"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Writing Docs"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "#878977";
const fontWeight = "bold";
const textCase = "uppercase";

const pageTitle="About Not Me";
---


		<style is:global define:vars={{ skillColor, fontWeight, textCase }}>
			h1 {
				color: purple;
				font-size: 4rem;
			}
			.skill {
				color: var(--skillColor);
				font-weight: var(--fontWeight);
				text-transform: var(--textCase);
			}
		</style>
<BaseLayout {pageTitle}>
		<h2>Here are a few facts about a person who isn't me.</h2>
		<ul>
			<li>My name is {identity.firstName}.</li>
			<li>
				I live in {identity.country} and work as a {
					identity.occupation
				}.
			</li>
			{
				identity.hobbies.length >= 2 && (
					<li>
						Two of my hobbies are: {identity.hobbies[0]} and{" "}
						{identity.hobbies[1]}.
					</li>
				)
			}
		</ul>
		<h2>Skills</h2>
		<ul>
			{skills.map((skill) => <li class="skill">{skill}</li>)}
		</ul>
		<h2>Some dynamic facts!</h2>
		{happy && <p>I'm happy to be learning Astro.</p>}
		{finished && <p>I finished this tutorial.</p>}
		{
			goal === 3 ? (
				<p>My goal is to finish in 3 days.</p>
			) : (
				<p>My goal is to finish in some unknown time period.</p>
			)
		}
</BaseLayout>